<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Only INTERNET permission for privacy - no sensitive permissions needed -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PluctApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pluct"
        tools:targetApi="31">
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.Pluct"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Deep link for ingest URLs -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="pluct" android:host="ingest" />
            </intent-filter>
        </activity>
        
        <!-- Share activity for handling ACTION_SEND intents -->
        <activity
            android:name=".share.ShareIngestActivity"
            android:exported="true"
            android:theme="@style/Theme.Pluct"
            android:label="@string/share_activity_label"
            android:icon="@mipmap/ic_launcher">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        
        <!-- Web transcript activity for automated transcript capture -->
        <activity
            android:name=".web.WebTranscriptActivity"
            android:exported="false"
            android:theme="@style/Theme.Pluct"
            android:label="Auto Transcribe"
            android:screenOrientation="portrait" />
    </application>

</manifest>
